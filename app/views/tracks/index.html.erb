<h1>Listing tracks</h1>

<table>
  <tr>
    <th>Shufflerid</th>
    <th>Title</th>
    <th>Order</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tracks.each do |track| %>
  <tr>
    <td><%= track.shufflerId %></td>
    <td><%= track.title %></td>
    <td><%= track.order %></td>
    
    <td><%= link_to 'Show', track %></td>
    
    <td><%= link_to 'Edit', edit_user_track_path(track) %></td>
    <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

